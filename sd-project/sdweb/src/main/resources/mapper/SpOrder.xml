<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.wodi.sdweb.dao.SpOrderDao">

    <resultMap type="SpOrder" id="SpOrderMap">    
        <result property="id" column="id" />    
        <result property="companyName" column="company_name" />    
        <result property="contact" column="contact" />    
        <result property="contactUser" column="contact_user" />
        <result property="email" column="email" />
        <result property="address" column="address" />
        <result property="status" column="status" />    
        <result property="created" column="created" />
        <result property="updated" column="updated" />
    </resultMap>
    
	<insert id="insert" parameterType="SpOrder">
			<![CDATA[ INSERT INTO SP_ORDER(company_name, contact, contact_user, email, address, status, created, updated, remark
			) VALUES( #{companyName}, #{contact}, #{contactUser}, #{email}, #{address}, #{status}, now(), now(), #{remark})
				]]>
	</insert>
	
	<select id="pageSelect" resultMap="SpOrderMap" parameterType="map">    
        <![CDATA[    
        select  id,                
           company_name ,          
           contact ,         
           contact_user, 
           email,
           address,  
           status,           
           created,    
           updated
        FROM SP_ORDER  limit  #{endRow}, #{startRow}
         ]]>     
    </select>
	
</mapper>