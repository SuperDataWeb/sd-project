<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.wodi.sdweb.dao.SpProductDao">

    <resultMap type="SpProduct" id="SpProductMap">    
        <result property="id" column="id" />    
        <result property="productName" column="product_name" />    
        <result property="description" column="description" />    
        <result property="presentation" column="presentation" />    
        <result property="img" column="img" />    
        <result property="status" column="status" />    
        <result property="created" column="created" />
        <result property="updated" column="updated" />
    </resultMap>
    
	<insert id="insert" parameterType="SpProduct">
			<![CDATA[ INSERT INTO SP_PRODUCT(product_name, description, presentation, img, status, created, updated
			) VALUES( #{productName}, #{description}, #{presentation}, #{img}, #{status}, now(), now() )
				]]>
	</insert>
	<select id="pageSelect" resultMap="SpProductMap" parameterType="map">    
        <![CDATA[    
        select  id,                
           product_name ,          
           description ,         
           presentation,              
           img,            
           status,           
           created,    
           updated
        FROM sp_product  limit  #{endRow}, #{startRow}
         ]]>     
    </select>
	
</mapper>